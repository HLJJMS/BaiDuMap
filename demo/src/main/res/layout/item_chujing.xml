<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_8013326A"
    android:id="@+id/cl_bg"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    android:paddingTop="10dp"
    android:paddingBottom="11dp"
    android:layout_width="260dp"
    tools:ignore="MissingConstraints"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他求助"
        android:textColor="@color/white"
        android:textSize="16sp"
      />
    <TextView
        android:id="@+id/tv_time"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:25:14 "
        android:textColor="@color/white"
        android:textSize="16sp"
        />
    <ImageView
        android:layout_marginTop="2dp"
        android:id="@+id/img_id"
        android:src="@mipmap/ic_menu"
        app:layout_constraintBottom_toBottomOf="@id/tv_id"
        app:layout_constraintTop_toTopOf="@id/tv_id"
        android:layout_width="13dp"
        android:layout_height="10dp"/>
    <TextView
        app:layout_constraintLeft_toRightOf="@id/img_id"
        android:paddingLeft="9.5dp"
        android:id="@+id/tv_id"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35010020190704102392"
        android:textColor="@color/white"
        android:textSize="16sp"
        />
    <ImageView
        app:layout_constraintTop_toBottomOf="@id/img_id"
        android:layout_marginTop="11dp"
        android:src="@mipmap/ic_position"
        android:id="@+id/img_address"
        android:layout_width="12dp"
        android:layout_height="16dp"/>

    <TextView
        android:layout_marginLeft="9dp"
        app:layout_constraintLeft_toRightOf="@id/img_address"
        app:layout_constraintTop_toTopOf="@id/img_address"
        app:layout_constraintBottom_toBottomOf="@id/img_address"
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="福建省公安厅旁"
        android:textColor="@color/white"
        android:textSize="16sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
