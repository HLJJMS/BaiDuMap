<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="4.5dp"
    tools:ignore="MissingConstraints">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_left"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="18.5dp"
        android:layout_marginBottom="12dp"
        android:background="@mipmap/bg_left"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_get"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingLeft="11.5dp"
            android:paddingTop="13dp"
            android:paddingRight="64.5dp"
            android:paddingBottom="12dp"
            android:text="待签收"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/tv_all"
            app:layout_constraintStart_toStartOf="@id/tv_all"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_point_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:background="@drawable/bg_red_circle"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_get"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_get" />

        <TextView
            android:id="@+id/tv_arrive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:paddingLeft="11.5dp"
            android:paddingTop="13dp"
            android:paddingRight="64.5dp"
            android:paddingBottom="12dp"
            android:text="待到场"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/tv_all"
            app:layout_constraintStart_toStartOf="@id/tv_all"
            app:layout_constraintTop_toBottomOf="@id/tv_get" />

        <TextView
            android:id="@+id/tv_point_arrive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:background="@drawable/bg_red_circle"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_arrive"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_arrive" />

        <TextView
            android:id="@+id/tv_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:paddingLeft="11.5dp"
            android:paddingTop="13dp"
            android:paddingRight="64.5dp"
            android:paddingBottom="12dp"
            android:text="待结束"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/tv_all"
            app:layout_constraintStart_toStartOf="@id/tv_all"
            app:layout_constraintTop_toBottomOf="@id/tv_arrive" />

        <TextView
            android:id="@+id/tv_point_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:background="@drawable/bg_red_circle"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_end"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_end" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:paddingLeft="11.5dp"
            android:paddingTop="13dp"
            android:paddingRight="64.5dp"
            android:paddingBottom="12dp"
            android:text="待反馈"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/tv_all"
            app:layout_constraintStart_toStartOf="@id/tv_all"
            app:layout_constraintTop_toBottomOf="@id/tv_end" />

        <TextView
            android:id="@+id/tv_point_callback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:background="@drawable/bg_red_circle"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_feedback"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_feedback" />

        <TextView
            android:id="@+id/tv_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:paddingLeft="11.5dp"
            android:paddingTop="13dp"
            android:paddingRight="64.5dp"
            android:paddingBottom="12dp"
            android:text="本组警情"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/tv_feedback" />

        <TextView
            android:id="@+id/tv_point_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:background="@drawable/bg_red_circle"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_my"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_my" />

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:paddingLeft="11.5dp"
            android:paddingTop="13dp"
            android:paddingRight="64.5dp"
            android:paddingBottom="12dp"
            android:text="本所警情"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/tv_my" />

        <TextView
            android:id="@+id/tv_point_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="28dp"
            android:background="@drawable/bg_red_circle"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tv_all"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_all" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/bg_conner_blue"
        app:layout_constraintBottom_toBottomOf="@id/cl_left"
        app:layout_constraintLeft_toRightOf="@id/cl_left"
        app:layout_constraintTop_toTopOf="@id/cl_left" />

    <LinearLayout
        android:id="@+id/ll_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingRight="26dp"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@mipmap/bg_red"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="新警情"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:src="@mipmap/line_blue" />

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/bg_blue"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="已签收"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:src="@mipmap/line_blue" />

        <TextView
            android:id="@+id/tv_three"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/bg_blue"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/txt_arrive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="待到场"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:src="@mipmap/line_blue" />

        <TextView
            android:id="@+id/tv_four"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/bg_blue"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView   android:textColor="@color/white"
            android:id="@+id/txt_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="待结束"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:background="@mipmap/line_blue" />

        <TextView
            android:id="@+id/tv_five"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/bg_blue"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView   android:textColor="@color/white"
            android:id="@+id/txt_callback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="待反馈"
            android:textSize="16sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:background="@mipmap/line_blue" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>